{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Today's shifts</h1>

        <hr/>

        {% for shift in shifts %}
            <div class="shift">
                <h3>{{ shift.employee_name }}</h3>
                <p>Position: {{ shift.position }} {{ shift.start_time }} - {{ shift.end_time }}</p>
                {% for timeclock in shift.timeclocks %}
                    <p>Timeclock: {{ timeclock.in }} - {{ timeclock.out }}</p>
                {% endfor %}
            </div>
        {% endfor %}

    </div>

{% endblock %}